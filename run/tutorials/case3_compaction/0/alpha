FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0.5;

boundaryField
{
    seaBed
    {
        type            alphaInletOutlet;
        inletValue      uniform 0;
        value           uniform 0;
    }
    frontBack
    {
        type            empty;
    }
    soilDomainBottom
    {
        type            zeroGradient;
    }
    left
    {
        type            splitCyclic;
    }
    right
    {
        type            splitCyclic;
    }
    liq
    {
        patchType       splitCyclic;
        type            fixedValue;
        value           uniform 0;
    }
    sol
    {
        patchType       splitCyclic;
        type            fixedValue;
        value           uniform 0;
    }
}


