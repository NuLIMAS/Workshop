FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      waveProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

       waveHeight     0.15; // in m
       waterDepth     0.5;   // in m
       direction     (1 0 0);	//wave direction
       period        1.6;  //wave period
       waveLength    2;   //wave length
       phase         -0.25; // Phase shift in rad/(2*pi) 
       offset        0;  // base pressure 
       value         uniform 0; // Initial value
       start         0; 


