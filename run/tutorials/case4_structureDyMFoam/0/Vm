FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      Vm;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    foundationSeabed
    {
        type            splitCyclic;

    }

    seabedFoundation
    {
        type            splitCyclic;
    }
    seaBed
    {
        type            zeroGradient;
    }

    "left|right"
    {
        type            splitCyclic;
    }

    soilDomainBottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    frontBack
    {
        type            empty;
    }

    liq
    {
        type            splitCyclic;
    }
    sol
    {
        type            splitCyclic;
    }
}

