FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    foundationSeabed
    {
        type            splitCyclic; 
        
    }

    seabedFoundation
    {
        type            splitCyclic;
    }
    
    seaBed
    {
        type            tractionDisplacementSF;
        traction        uniform (0 0 0);
        pressure        uniform 0;
        value           uniform (0 0 0);
    }

    foundationTop
    {
        type            tractionDisplacementSF;
        traction        uniform (0 0 0);
        pressure        uniform 0;
        value           uniform (0 0 0);
    }

    "left|right"
    {
        type            splitCyclic;
    }
    
    soilDomainBottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    frontBack
    {
        type            empty;
    }
}

